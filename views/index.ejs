<body>

<div class="container">

<!-- Main component for a primary marketing message or call to action -->
<table class="table table-hover table-striped">
    <tbody>

    <!-- Display urls -->
    <% for(var i in urls) { %>
        <tr>
            <td><span><%= urls[i].subject %></span></td>
            <td>
            <% for(var j in urls[i].emails) { %>
                <button type="button" class="btn btn-primary btn-xs">
                    <%= urls[i].emails[j] %>
                    <a href="<%= urls[i].delete_emails[j] %>"><span class="glyphicon glyphicon-remove white"></span></a>
                </button>
            <% } %>
            <button type="button" class="btn btn-primary btn-xs" onClick="add_email_input('<%= urls[i].site %>', '<%= urls[i].id %>')">
                <span class="glyphicon glyphicon-plus white"></span>
            </button>
            </td>
        </tr>
    <% } %>

    </tbody>
</table>

</div> <!-- /container -->

<!-- Bootstrap core JavaScript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="javascripts/bootstrap.min.js"></script>
<script language="JavaScript">
function add_email_input(site, id) {
    var email = window.prompt('새로 추가할 이메일 주소를 입력하세요.', 'test@example.com');
    if(email != null) {
        var params = { 'site': site, 'id': id, 'email': email };
        $.get('/add_email', params, function(data) {
            window.location.href = "/";
        });
    }
    return true;
}
</script>
</body>
